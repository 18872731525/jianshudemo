<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/default_page_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_backgroud"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_default_lcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/no_network_icon" />

    <TextView
        android:id="@+id/tv_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp15"
        android:gravity="center"
        android:paddingLeft="@dimen/dp25"
        android:paddingRight="@dimen/dp25"
        android:text="@string/network_error"
        android:textColor="@color/gray_898989"
        android:textSize="@dimen/sp14" />

    <TextView
        android:id="@+id/tv_load"
        android:layout_width="@dimen/dp120"
        android:layout_height="@dimen/dp35"
        android:layout_marginTop="@dimen/dp15"
        android:background="@drawable/radius_default_btn"
        android:gravity="center"
        android:text="@string/network_error_btn"
        android:textColor="@color/black_414141"
        android:textSize="@dimen/sp14" />

</LinearLayout>
